<%- include("../partials/header") %>

<section class="py-5 section-1">
    <div class="container py-5 text-center">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Add Room</h2>
                <div class="container" style="width: 55%; margin-top: 20px;">
                <form action="/addRoom" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                       <select class="form-control" name="category" id="" required>
                          <% if(room.category) {%>
                            <option value="<%=room.category.toLowerCase()%>"><%=room.category.toUpperCase()%></option>
                            <option value="basic">Basic</option>
                            <option value="dulux">Dulux</option>
                            <option value="luxury">Luxury</option>
                            <%}else{%>
                           <option value="">Select Category</option>
                           <option value="basic">Basic</option>
                           <option value="dulux">Dulux</option>
                           <option value="luxury">Luxury</option>
                           <%}%>
                       </select>
                    </div>
                <div class="form-group">
                    <input type="file" name="file" class="form-control" id="" value="/uploads/<%=room.image%>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number"  name="price" value="<%=room.price%>" placeholder="price" id="" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" id="" cols="30" rows="5" placeholder="description" required><%=room.description%></textarea>
                </div>
                <input type="hidden" name="hid" value="<%=room._id%>">
               
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        <% if(room){%>
                            update Room
                            <%}else{%>
                                upload room
                                <%}%>
                    </button>
                </div>
                   </form>
                </div>
               
            </div>
        </div>
    </div>
</section>


<%- include("../partials/footer") %>