<%- include("../partials/header") %>

<section class="py-5 section-1">
    <div class="container py-5 text-center">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>show page!!!</h2>
                <div class="card mb-3">
                    <img class="card-img-top" src="/uploads/<%=room.image%>" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title"><%= room.category %></h5>
                      <h5 class="card-title">$<%=room.price%>/day</h5>
                      <p class="card-text"><%= room.description %></p>
                     <% if(!isAdmin){ %>
                     <form action="/cart" method="post">
                       <input type="hidden" name="roomId" value="<%=room._id%>">
                       <button type="submit" class="btn btn-primary">Add To Cart</button>
                    </form>
                      <%}else{%>
                        <a href="/room/<%=room._id%>/edit" class="btn btn-warning">Edit</a>
                        <a href="/room/delete/<%=room._id%>" class="btn btn-danger">Delete</a>
                        <%}%>
                      
                    </div>
                  </div>
               
            </div>
        </div>
    </div>
</section>




<%- include("../partials/footer") %>