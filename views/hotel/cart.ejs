<%- include("../partials/header") %>


<section class="py-5 section-1">
    <div class="container py-5 text-center">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>This is Cart page!</h2>
                <main>
                    <% if (rooms.length > 0) { %>
                        <ul class="cart__item-list">
                            <% rooms.forEach(p => { %>
                                <li class="cart__item">
                                    <h1><%= p.roomId.category %></h1>
                                    <h2>Price: $ <%= p.price %></h2>
                                    <form action="/cart-delete-item" method="POST">
                                        
                                        <input type="hidden" value="<%= p.roomId._id %>" name="roomId">
                                        <button class="btn btn-danger" type="submit">Delete</button>
                                    </form>
                                </li>
                            <% }) %>
                        </ul>
                        <hr>
                        <div class="container">
                           
                    </div>
                        <div class="centered" style="margin: auto; text-align: center; margin-top: 20px;">
                            <form action="/order" method="POST">
                                <div class="row">
                                    <div class="col col-lg-6">
                                       <label class="form-label" for="form">From</label>
                                       <input type="date" name="from" id="" class="form-control">
                                    </div>
                                    <div class="col col-lg-6">
                                  <label for="to" class="form-label">To</label>
                                  <input type="date" name="to" id="" class="form-control">
                                </div>
                               </div>
                                <input type="hidden" name="rooms" value="<%=rooms%>">
                                <button type="submit" style="margin-top: 20px;" class="btn btn-success">Book Now!</button>
                            </form>
                        </div>
                        
                    <% } else { %>
                        <h1>No Products in Cart!</h1>
                    <% } %>
                </main>
       
</div>
</div>
</div>
</section>



<%- include("../partials/footer") %>

